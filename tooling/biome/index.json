{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "assists": {
    "enabled": true
  },
  "formatter": {
    "attributePosition": "multiline",
    "bracketSpacing": true,
    "enabled": true,
    "formatWithErrors": false,
    "ignore": [
      "**/node_modules/**",
      "**/dist/**",
      "**/build/**",
      "**/public/**",
      "**/.next/**",
      "**/.velite/**",
      "./apps/old_react_docs/",
      "./packages/___/",
      "./packages/_oldstuff_refactor/",
      "./packages/benchmark/",
      "./**/_*/**"
    ],
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 120
  },
  "javascript": {
    "formatter": {
      "arrowParentheses": "always",
      "attributePosition": "auto",
      "bracketSameLine": true,
      "bracketSpacing": true,
      "jsxQuoteStyle": "double",
      "quoteProperties": "asNeeded",
      "quoteStyle": "single",
      "semicolons": "asNeeded",
      "trailingCommas": "all"
    },
    "globals": ["Global1"]
  },
  "linter": {
    "enabled": true,
    "ignore": [
      "**/node_modules/**",
      "**/dist/**",
      "**/build/**",
      "**/test/**",
      "**/public/**",
      "**/.next/**",
      "**/.velite/**",
      "./apps/old_react_docs/",
      "./apps/docs/",
      "./apps/upload-api/",
      "./apps/www/",
      "./packages/___/",
      "./packages/_oldstuff_refactor/",
      "./packages/duck-state/",
      "./packages/duck-benchmark/",
      "./packages/duck-ui/",
      "./packages/benchmark/",
      "**/upload/**",
      "**/table/**",
      "**/combobox.tsx",
      "./**/_*/**"
    ],
    "rules": {
      "complexity": {
        "noForEach": "error",
        "noStaticOnlyClass": "error",
        "noUselessSwitchCase": "error",
        "useFlatMap": "error"
      },
      "recommended": false,
      "style": {
        "noNegationElse": "error",
        "noNonNullAssertion": "warn",
        "noVar": "error",
        "useConst": "error",
        "useDefaultSwitchClause": "error",
        "useForOf": "error",
        "useNodejsImportProtocol": "error",
        "useNumberNamespace": "error",
        "useWhile": "error"
      },
      "suspicious": {
        "noDoubleEquals": "error",
        "noExplicitAny": "warn",
        "noImplicitAnyLet": "error",
        "noThenProperty": "error",
        "useGetterReturn": "error",
        "useIsArray": "error"
      }
    }
  },
  "organizeImports": {
    "enabled": true
  },
  "overrides": [
    {
      "formatter": {
        "indentWidth": 2
      },
      "include": ["*.json"]
    },
    {
      "include": ["tests/**"],
      "linter": {
        "rules": {
          "suspicious": {
            "noDoubleEquals": "off"
          }
        }
      }
    }
  ]
}
