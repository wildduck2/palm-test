{
  "$schema": "https://json.schemastore.org/package.json",
  "dependencies": {
    "@faker-js/faker": "^10.0.0",
    "bcryptjs": "^3.0.2",
    "dotenv": "^17.2.2",
    "drizzle-orm": "^0.44.5",
    "pg": "^8.16.3",
    "postgres": "^3.4.7",
    "tsdown": "catalog:",
    "uuidv7": "^1.0.2"
  },
  "devDependencies": {
    "@acme/typescript-config": "workspace:*",
    "@types/node": "^24.5.2",
    "@types/pg": "^8.15.5",
    "drizzle-kit": "^0.31.4",
    "tsx": "^4.20.5",
    "typescript": "catalog:"
  },
  "exports": {
    ".": "./src/db.ts",
    "./constants": "./src/constants.ts",
    "./relations": "./src/relations.ts",
    "./tables": "./src/tables.ts",
    "./types": "./src/types.ts"
  },
  "name": "@acme/db",
  "private": true,
  "scripts": {
    "build": "tsdown ./src",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:pull": "drizzle-kit pull",
    "db:push": "drizzle-kit push",
    "db:reset": "tsx ./src/reset-db.ts && drizzle-kit push",
    "db:seed": "tsx ./src/seed.ts",
    "db:start": "pnpm run db:generate && pnpm run db:reset && pnpm run db:seed && pnpm run db:studio",
    "db:studio": "npx drizzle-kit studio --host 0.0.0.0 --port 4983"
  },
  "type": "module",
  "version": "0.1.0"
}
